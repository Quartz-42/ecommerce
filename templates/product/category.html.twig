{% extends 'base.html.twig' %}

{% block title %}
	Catégorie :
	{{ category.name }}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">
			{{ category.name }}
		</li>
	</ol>
	<h1>
		Catégorie :
		{{ category.name }}
	</h1>
	<div class="row">
		{% for product in category.products %}
			<div class="col-3">
				<div class="card">
					<img src="{{ product.mainPicture }}" class="img-fluid" alt="img produit">
					<div class="card-body">
						<a href="{{ path('product_show', {'category_slug': product.category.slug, 'slug': product.slug }) }}" class="card-title">{{ product.name }}
						</a>
						<span>
							{{ product.price /100 }}
							€
						</span>
						<span class="badge badge-info">
							{{ product.category.name }}
						</span>
						<p class="card-text">{{ product.shortDescription }}</p>
						<a href="#" class="btn btn-primary btn-sm">Détails du produit</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter au panier</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
