{% extends 'base.html.twig' %}

{% block title %}
	Modification d'une catégorie
{% endblock %}

{% block body %}
	<h1>Modification d'une catégorie existante</h1>
	{{ form_start(form) }}
	{{ form_errors(form) }}
	{{ form_row(form.name, {
        'label':'Nom',
        'class':'form-control',
    }) }}
	<br>
	{{ form_row(form.save, {
        'label': 'Sauvegarder les modifications'
    })}}
	{{ form_end(form) }}
{% endblock %}
